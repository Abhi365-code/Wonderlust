<% layout("/layouts/boilerplate") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-11 col-md-8 col-lg-6 mt-4">
      <h3 class="mb-3"><%= listing.title %></h3>

      <div class="card listing-show-card shadow-sm">
        <% if (listing.image && (listing.image.url || typeof listing.image === 'string')) { %>
          <img
            src="<%= (listing.image.url) ? listing.image.url : listing.image %>"
            alt="Listing Image"
            class="card-img-top listing-show-img"
          />
        <% } %>

        <div class="card-body">
          <p>Owned by <%= listing.owner.username %></p>
          <p class="card-text listing-desc mb-3"><%= listing.description %></p>

          <ul class="list-unstyled listing-meta mb-0">
            <% if (listing.price !== undefined && listing.price !== null) { %>
              <li><strong>Price:</strong> ‚Çπ <%= Number(listing.price).toLocaleString("en-IN") %></li>
            <% } %>
            <% if (listing.location) { %>
              <li><strong>Location:</strong> <%= listing.location %></li>
            <% } %>
            <% if (listing.country) { %>
              <li><strong>Country:</strong> <%= listing.country %></li>
            <% } %>
          </ul>
        </div>
      </div>

      <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
      <div class="d-flex gap-2 mt-3">
        <a href="/listing/<%= listing._id %>/edit" class="btn btn-outline-dark">Edit</a>

        <form method="POST" action="/listing/<%= listing._id %>?_method=DELETE"
          onsubmit="return confirm('Are you sure you want to delete this listing?');">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <hr>

  <div class="row justify-content-center">
    <div class="col-11 col-md-8 col-lg-6 mt-4">

      <% if(currUser) { %>
      <h4>Leave a Review</h4>
      <form method="POST" action="/listing/<%= listing._id %>/reviews" class="needs-validation" novalidate>
      <br>

        <fieldset class="starability-growRotate">
          <h5 class="form-label mb-2">Rating</h5>
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5">5 stars</label>
        </fieldset>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
       <br><br>
      <% } %>

      <p><b>All Reviews</b></p>

      <div class="review-grid">
        <% for (let review of listing.reviews) { %>
          <div class="review-card">
            <div>
              <h5><%= review.author.username %></h5>
              <p><%= review.comment %></p>
              <span>‚≠ê <%= review.rating %>/5</span>
            </div>

            <form action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
              <button class="btn-delete">Delete</button>
            </form>
          </div>
        <% } %>
      </div>

    </div>
  </div>
</div>

<h4 class="mt-3">üìç Location on Map</h4>

<div class="map-wrapper">
  <div id="map"></div>
</div>

<script>
  window.mapData = <%- JSON.stringify(listing.geometry.coordinates) %>;
</script>







